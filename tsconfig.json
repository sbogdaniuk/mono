{
  "extends": "./tsconfig.paths.json",
  "references": [{
    "path": "./packages/core"
  }],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "noEmit": true,
    "emitDeclarationOnly": false,
    "paths": {
