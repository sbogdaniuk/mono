{
  "packages": [
    "packages/*"
  ],
  "npmClient": "npm",
  "version": "independent",
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "scripts/**",
        ",**/__fixtures__/**",
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/*.md",
        "lerna.json"
      ],
      "allowBranch": [
        "main",
        "dev"
      ],
      "conventionalCommits": true,
      "changelogPreset": "angular",
      "createRelease": "github",
      "commitHooks": false,
      "message": "chore(release): New release :tada: :rocket:",
      "excludeDependents": true
    },
    "publish": {
      "conventionalCommits": true,
      "contents": "."
    }
  }
}
